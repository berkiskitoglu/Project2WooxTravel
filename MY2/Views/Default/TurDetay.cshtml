                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="section-heading">
                        @{
                            var description = Model.Description;
                            var maxLength = 409;

                            if (description.Length > maxLength)
                            {
                                // Belirtilen uzunluk sınırına kadar olan kısmı al
                                var trimmedText = description.Substring(0, maxLength);

                                // Noktalama işaretlerini bul ve son harften sonrasını al
                                int lastSentenceEnd = -1;
                                for (int i = maxLength - 1; i >= 0; i--)
                                {
                                    if (trimmedText[i] == '.' || trimmedText[i] == '!' || trimmedText[i] == '?')
                                    {
                                        if (i > 0 && char.IsLetter(trimmedText[i - 1]))
                                        {
                                            lastSentenceEnd = i;
                                            break;
                                        }
                                    }
                                }

                                // Cümlenin tam bitişine kadar kırp ve devamına "..." ekle
                                description = lastSentenceEnd >= 0 ? trimmedText.Substring(0, lastSentenceEnd + 1) + "" : trimmedText + "";
                            }
                        }
                        <p>@description</p>


                    </div>
