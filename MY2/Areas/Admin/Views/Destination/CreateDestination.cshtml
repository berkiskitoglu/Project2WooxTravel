@model MY2.Entities.Destination

@{
    ViewBag.Title = "CreateDestination";
    Layout = "~/Areas/Admin/Views/_AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Tables</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Tables</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Basic Tables</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Destinasyon İşlemleri</div>
                    </div>
                    <div class="card-body">

                        <form method="post">

                            <label>Ülke Adı:</label>
                            @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
                            <br />
                            <label>Şehir Adı:</label>
                            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                            <br />
                            <label>Tur Başlığı:</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <br />
                            <label>Gün-Gece:</label>
                            @Html.TextBoxFor(x => x.DayNight, new { @class = "form-control" })
                            <br />
                            <label>Kapak Görseli URL:</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />
                            <label>Tur Fiyatı:</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                            <br />
                            <label>Açıklama:</label>
                            @Html.TextAreaFor(x => x.Description, 5,0,new { @class = "form-control" })
                            <button class="btn btn-primary">Tur Rotasını Oluştur</button>
                        </form>

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

